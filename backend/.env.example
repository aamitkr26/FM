# Database
DATABASE_URL=postgresql://postgres:[PASSWORD]@aws-1-ap-south-1.pooler.supabase.com:5432/postgres

# Seed Data (optional)
# Set to false to skip seeding demo data. System works with empty database.
ENABLE_SEED=true

# JWT Secrets
JWT_SECRET=change_this_to_a_secure_random_string_min_32_chars
JWT_REFRESH_SECRET=change_this_to_another_secure_random_string_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=4000
NODE_ENV=development

# Logging
# error | warn | info | http | debug
LOG_LEVEL=info

# Frontend URL for CORS
FRONTEND_URL=https://fm-puce-iota.vercel.app

# Optional: extra allowed CORS origins (comma-separated). Useful for Vercel previews.
# Example: CORS_ORIGINS=https://fm-1-0.vercel.app,https://fm-1-0-production.vercel.app
# Note: use origins (no trailing slash, no paths).
CORS_ORIGINS=https://fm-puce-iota.vercel.app

# GPS Provider (millitrack | simulator)
GPS_PROVIDER=simulator
GPS_POLL_INTERVAL=10000
# Note: value is in milliseconds (e.g. 10000 = 10 seconds)

# Millitrack API (only needed if GPS_PROVIDER=millitrack)
MILLITRACK_TOKEN=your_millitrack_access_token_here
MILLITRACK_BASE_URL=https://mvts1.millitrack.com/api/middleMan/getDeviceInfo

# Simulation Settings (only used if GPS_PROVIDER=simulator)
# These settings control the simulator behavior
SIMULATION_FLEET_SIZE=10
SIMULATION_ENABLE_THEFT=true
SIMULATION_ENABLE_TAMPERING=true